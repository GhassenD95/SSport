<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefWidth="800.0" spacing="20.0" stylesheets="@../../styles.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddEntrainmentController">
   <children>
      <HBox>
         <children>
            <VBox fx:id="title" />
         </children>
      </HBox>
      <HBox alignment="CENTER" styleClass="card2">
         <children>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <Label styleClass="text-secondary" text="Nom de la seance:" />
                        <TextField />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <Label styleClass="text-secondary" text="equipe concerne:" />
                        <ComboBox prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <Label styleClass="text-secondary" text="lieux:" />
                        <ComboBox prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <Label styleClass="text-secondary" text="notes coach:" />
                        <TextArea prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #2C3E50;" styleClass="text-area" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <HBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Label styleClass="text-secondary" text="debut" />
                              <DatePicker />
                              <HBox spacing="5.0">
                                 <children>
                                    <TextField prefHeight="28.0" prefWidth="35.0" text="HH" />
                                    <TextField prefHeight="28.0" prefWidth="35.0" text="MM" />
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <HBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Label styleClass="text-secondary" text="fin  " />
                              <DatePicker />
                              <HBox spacing="5.0">
                                 <children>
                                    <TextField prefHeight="28.0" prefWidth="35.0" text="HH" />
                                    <TextField prefHeight="28.0" prefWidth="35.0" text="MM" />
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" styleClass="btn-1" text="ajouter">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin></Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
