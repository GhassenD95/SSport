<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <TextField fx:id="email" prefWidth="250.0" promptText="email" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="30.0" layoutY="196.0">
         <children>
            <TextField fx:id="password" prefWidth="250.0" promptText="password" />
         </children>
      </HBox>
      <Label fx:id="error" style="-fx-text-fill: #FF2D55;" />
      <Button onMouseClicked="#login" mnemonicParsing="false" styleClass="btn-1" text="login" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
